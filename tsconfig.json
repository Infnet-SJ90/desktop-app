{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"strict": true,
		"strictNullChecks": false,
		"noImplicitAny": true,
        "pretty": true,
        "newLine": "LF",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "allowJs": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
	  "node_modules"
	]
}
